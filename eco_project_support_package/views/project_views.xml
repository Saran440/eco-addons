<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Project -->
    <record id="project_support_package" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="support_package" string="Support Package">
                    <group name="support_package" string="Support Package">
                        <field name="support_package_line_ids" nolabel="1" context="{'tree_view_ref':'eco_project_support_package.project_support_package_tree_view'}"/>
                    </group>
                    <group name="subtasks" string="Used Man-Hour">
                        <field name="task_line_ids" nolabel="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="total_stage_close" widget="float_time"/>
                            <field name="total_stage_not_close" widget="float_time"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_effective_package" widget="float_time"/>
                            <field name="total_used_effective_package" widget="float_time"/>
                            <field name="balance" widget="float_time" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="project_support_package_tree_view" model="ir.ui.view">
        <field name="name">project.support.package.tree.view</field>
        <field name="model">project.support.package.line</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="Support Package" editable="bottom">
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="ref"/>
                <field name="name"/>
                <field name="duration" widget="float_time" sum="Total Duration"/>
                <field name="used_time_package" widget="float_time" sum="Total Used"/>
                <field name="effective" widget="float_time" sum="Total Effective"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_form3_inherited">
        <field name="name">project.task.form.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']/tree" position="inside">
                <field name="package_id"/>
            </xpath>
        </field>
    </record>
</odoo>
